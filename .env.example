NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OpenRouter API (required for generation)
OPENROUTER_API_KEY=your-openrouter-api-key
# Optional: override default model (defaults to google/gemini-3-pro-preview)
OPENROUTER_MODEL=google/gemini-3-pro-preview

# Daily limits
GENERATE_DAILY_LIMIT=3
REGEN_DAILY_LIMIT=10

# Server-side analytics (optional)
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Observability / analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Sentry auth token for source maps (optional in CI)
SENTRY_AUTH_TOKEN=your-sentry-token
